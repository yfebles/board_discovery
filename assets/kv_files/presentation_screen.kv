# -*- coding: utf-8 -*-


<PresentationScreen>:
    id: presentation_screen

    back_image: "intro_back.jpg"
    canvas.before:
        Rectangle:
            source: os.path.join("assets","images","app_graphics", self.back_image)
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: self.height * 0.06
        size_hint: [0.9, 0.9]
        pos: presentation_screen.width * 0.05, presentation_screen.height * 0.05
        halign: 'center'

        Widget:
            size_hint: [1, 0.5]

            canvas.before:
                Rectangle:
                    source: os.path.join("assets","images","app_graphics", "game_logo.png")
                    pos: self.pos
                    size: self.size
        BoxLayout:
            orientation:'horizontal'
            size_hint: [1, 0.5]

            Widget:
                size_hint: [0.25, 1]

            BoxLayout:
                orientation: 'vertical'
                size_hint: [0.5, 1]

                RoundedButton:
                    size_hint: [1, 0.2]
                    text: "[color=#94875a][size="+ str(min(int(self.height * 0.6), int(self.width / 6.0 ))) + "][font=" + os.path.join("assets","fonts","fontawesome-webfont.ttf") + "]  [/font] [font=" + os.path.join("assets","fonts","metamorphous-regular.ttf") + "]Jugar[/font][/size][/color]"
                    on_press: app.screen_manager.current = 'play'  # the lite version go straight to play no to menu

                Widget:
                    size_hint: [1, 0.3]

                BoxLayout:
                    size_hint: [1, 0.5]
                    spacing: 0.2
                    orientation: 'vertical'

                    PresentationLabel:
                        text: "juegos en: \n [ref=''][color=#dec07b]" + app.GIFTY_GAME_WEB_SITE +"[/color][/ref]"
                        texture_path: os.path.join("assets", "images", "app_graphics", "wrong_points_texture.jpg")
                        on_ref_press: app.visit_gifty_games()

                    PresentationLabel:
                        text: "© Board Discovery GiftyPlay® 2016"
            Widget:
                size_hint: [0.25, 1]



