#:include assets\\kv_files\\back_to_menu_button.kv

<PlayScreen>:
    id: play_screen

    BoxLayout:
        orientation: 'vertical'
        spacing: self.height * 0.05
        size_hint: [1, 1]

        GridLayout:
            rows: 2
            size_hint: [1, 0.2]
            Button:
                text: "Close"
                on_press: app.screen_manager.current = 'menu'

            Label:
                text: "Points"
            Label:
                text: "Lives"
            Label:
                text: "Hints"
            Label:
                text: ""
            Label:
                id: points_lbl
                text: "0"
            Label:
                id: lives_lbl
                text: "2"
            Label:
                id: hints_lbl
                text: "0"

        Board:
            spacing: self.width * 0.01
            size_hint: [0.95, 0.95]
            width: min(self.parent.width, self.parent.height)
            pos: self.parent.width * 0.025, self.parent.height * 0.025

        BackToMenuButton