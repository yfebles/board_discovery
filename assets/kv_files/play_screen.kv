#:include assets\\kv_files\\back_to_menu_button.kv

<PlayScreen>:
    id: play_screen
    points_lbl: points_label_id
#    lives_lbl: lives_label_id
    hints_lbl: hints_label_id
    board_widget: board_widget_id
    time_lbl: time_label_id


    BoxLayout:
        orientation: 'vertical'
        spacing: self.height * 0.05
        size_hint: [1, 1]

        BoxLayout:
            horizontal: True
            size_hint: [1, 0.2]
            Button:
                size_hint:[0.2,1]
                text: "Menu"
                on_press: app.screen_manager.current = 'menu'

            GridLayout:
                cols: 3

                Image:
                    size_hint:[0.5, 0.5]
                    source: "assets\\images\\coins.png"

#                Image:
#                    size_hint:[0.5, 0.5]
#                    source: "assets\\images\\heart.png"

                Label:
                    size_hint:[0.5, 0.5]
                    text: "Hints"

                Label:
                    size_hint:[0.5, 0.5]
                    text: "Time"

                Label:
                    id: points_label_id
                    text: "0"

#                Label:
#                    id: lives_label_id
#                    text: "2"

                Label:
                    id: hints_label_id
                    text: "0"

                Label:
                    id: time_label_id
                    text: "00:00"

        GridLayout:
            id: board_widget_id
            spacing: self.width * 0.01
            width: min(self.parent.width, self.parent.height) * 0.6

            pos: self.parent.width * 0.2, self.parent.height * 0.2
