#:include assets\\kv_files\\back_to_menu_button.kv

<PlayScreen>:
    id: play_screen
    points_lbl: points_label_id
    lives_lbl: lives_label_id
    hints_lbl: hints_label_id
    board: board_widget_id

    BoxLayout:
        orientation: 'vertical'
        spacing: self.height * 0.05
        size_hint: [1, 1]

        GridLayout:
            rows: 2
            size_hint: [1, 0.2]
            Button:
                text: "Close"
                on_press: app.screen_manager.current = 'menu'

            Label:
                text: "Points"
            Label:
                text: "Lives"
            Label:
                text: "Hints"
            Label:
                text: ""
            Label:
                id: points_label_id
                text: "0"
            Label:
                id: lives_label_id
                text: "2"
            Label:
                id: hints_label_id
                text: "0"

        Board:
            id: board_widget_id
            spacing: self.width * 0.01
            size_hint: [0.95, 0.95]
            width: min(self.parent.width, self.parent.height)
            pos: self.parent.width * 0.025, self.parent.height * 0.025

        BackToMenuButton:
            size_hint: [0.4, 0.2]
            pos: self.parent.width * 0.3, self.parent.height * 0.4
