#:include assets\kv_files\play_screen.kv
#:include assets\kv_files\author_screen.kv
#:include assets\kv_files\levels_screen.kv
#:include assets\kv_files\settings_screen.kv


<MenuScreen>:
    id: menu_screen

    BoxLayout:
        orientation: 'vertical'
        spacing: self.height * 0.1
        size_hint: [0.5, 0.8]
        pos: menu_screen.width * 0.25, menu_screen.height * 0.1

        RoundedButton:
            text: "Play"
            on_press: app.screen_manager.current = 'play'

        RoundedButton:
            text: "Settings"
            on_press: app.screen_manager.current = 'settings'

        RoundedButton:
            text: "Levels"
            on_press: app.screen_manager.current = 'levels'

        RoundedButton:
            text: "Author"
            on_press: app.screen_manager.current = 'author'

        RoundedButton:
            text: "Exit"
            on_press: app.stop()