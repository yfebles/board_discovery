#:include assets\kv_files\play_screen.kv
#:include assets\kv_files\author_screen.kv
#:include assets\kv_files\levels_screen.kv

<MenuScreen>:
    id: menu_screen

    canvas.before:
        Rectangle:
            source: os.path.join("assets","images","app_graphics", "menu_back.jpg")
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: self.height * 0.1
        size_hint: [0.5, 0.8]
        pos: menu_screen.width * 0.25, menu_screen.height * 0.1


        RoundedButton:
            text: "Play"
            background_color: [0] * 4
            on_press: app.screen_manager.current = 'play'

        RoundedButton:
            text: "Settings"
            on_press: app.open_settings()

        RoundedButton:
            text: "Levels"
            on_press: app.screen_manager.current = 'levels'

        RoundedButton:
            text: "Author"
            id: author_button
            on_press: app.screen_manager.current = 'author'

        RoundedButton:
            text: "Exit"
            on_press: app.close()