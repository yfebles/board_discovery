# -*- coding: utf-8 -*-

#:include assets\kv_files\play_screen.kv
#:include assets\kv_files\author_screen.kv
#:include assets\kv_files\levels_screen.kv

<MenuScreen>:
    id: menu_screen

    canvas.before:
        Rectangle:
            source: os.path.join("assets","images","app_graphics", "menu_back.jpg")
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: self.height * 0.06
        size_hint: [0.7, 0.7]
        pos: menu_screen.width * 0.15, menu_screen.height * 0.15

        RoundedButton:
            icon_text: ""
            button_text: "Play"
            on_touch_down: app.screen_manager.current = 'play'

        RoundedButton:
            icon_text: ""
            button_text: "Settings"
            on_touch_down: app.open_settings()

        RoundedButton:
            icon_text: ""
            button_text: "Levels"
            on_touch_down: app.screen_manager.current = 'levels'

        RoundedButton:
            icon_text: ""
            button_text: "Author"
            id: author_button
            on_touch_down: app.screen_manager.current = 'author'

        RoundedButton:
            icon_text: ""
            button_text: "Exit"
            on_touch_down: app.close()