#:include assets\kv_files\utils.kv
#:import os os


<LevelsScreen>:
    levels_grid: levels_grid_id
    spacing: 20

    FloatLayout:
        size_hint: [1, 1]

        # set a back image
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: os.path.join("assets","images", "level_back.jpg")

        ScrollView:
            size_hint: [0.9, 0.9]
            pos: self.parent.width * 0.05, self.parent.height * 0.05

            GridLayout:
                id: levels_grid_id
                cols: 3
                size_hint: [1, None]


        BackToMenuButton:
            size_hint: [0.1, 0.1]
            pos: self.parent.width * 0.1, self.parent.height * 0.1