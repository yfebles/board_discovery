#:include assets\kv_files\utils.kv
#:import os os


<LevelsScreen>:
    id: levels_screen
    levels_grid: levels_grid_id
    spacing: 20

    canvas.before:
        Rectangle:
            source: os.path.join("assets","images","app_graphics", "menu_back.jpg")
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size_hint: [0.9, 0.9]
        pos: levels_screen.width * 0.05, levels_screen.height * 0.05

        ScrollView:
            size_hint: [0.9, 1]
            pos: self.parent.width * 0.05, self.parent.height * 0.05

            GridLayout:
                id: levels_grid_id
                cols: 3
                size_hint: [1, None]


        BackToMenuButton:
            size_hint: [0.1, 1]