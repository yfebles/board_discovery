<ScreenButton@Button>:
    size_hint: [0.5, 0.10]

<BackToMenuButton@ScreenButton>:
    text: 'Menu'
    on_press: app.screen_manager.current = 'menu'

<AuthorScreen>:
    BoxLayout:
        orientation: 'vertical'
        ScreenButton:
            text: "Author Screen"

        BackToMenuButton

<LevelsScreen>:
    BoxLayout:
        orientation: 'vertical'
        ScreenButton:
            text: "Level Screen"

        BackToMenuButton

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        ScreenButton:
            text: "Settings Screen"

        BackToMenuButton

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '40dp'
        padding: ['40dp', '20dp', '20dp', '40dp']

        ScreenButton:
            text: "Play"

        ScreenButton:
            text: "Settings"
            on_press: root.manager.current = 'settings'

        ScreenButton:
            text: "Levels"
            on_press: root.manager.current = 'levels'

        ScreenButton:
            text: "Author"
            on_press: root.manager.current = 'author'

        ScreenButton:
            text: "Exit"
            on_press: app.stop()