<ScreenButton@Button>:
    size_hint: [0.5, 0.10]

<BackToMenuButton@ScreenButton>:
    text: 'Menu'
    on_press: app.screen_manager.current = 'menu'

<PlayScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '40dp'

        GridLayout:
            rows: 2

            Button:
                text: "Close"
            Button:
                text: ""

            Label:
                text: "Points"
            Label:
                  text: "0"
            Label:
                text: "Hints"
            Label:
                  text: "0"
            Label:
                text: "Lives"
            Label:
                  text: "0"
            Label:
                text: "time

        Board
        BackToMenuButton

<AuthorScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '40dp'

        ScreenButton:
            text: "Author Screen"

        BackToMenuButton

<LevelsScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '40dp'
        ScreenButton:
            text: "Level Screen"

        BackToMenuButton

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '40dp'
        BackToMenuButton

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '40dp'
        size_hint: [1,1]

        ScreenButton:
            text: "Play"
            on_press: app.screen_manager.current = 'play'


        ScreenButton:
            text: "Settings"
            on_press: app.screen_manager.current = 'settings'

        ScreenButton:
            text: "Levels"
            on_press: app.screen_manager.current = 'levels'

        ScreenButton:
            text: "Author"
            on_press: app.screen_manager.current = 'author'

        ScreenButton:
            text: "Exit"
            on_press: app.stop()