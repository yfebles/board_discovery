<ScreenButton@Button>:
    size_hint: [0.5, 0.10]

<BackToMenuButton@ScreenButton>:
    text: 'Menu'
    on_press: app.screen_manager.current = 'menu'

<AuthorScreen@GameAuxScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '40dp'

        ScreenButton:
            text: "Author Screen"

        BackToMenuButton

<LevelsScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '40dp'
        ScreenButton:
            text: "Level Screen"

        BackToMenuButton

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '40dp'
        ScreenButton:
            text: str(app.settings['music'])

        BackToMenuButton

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '40dp'
        size_hint: [1,1]


        ScreenButton:
            text: "Play"

        ScreenButton:
            text: "Settings"
            on_press: app.screen_manager.current = 'settings'

        ScreenButton:
            text: "Levels"
            on_press: app.screen_manager.current = 'levels'

        ScreenButton:
            text: "Author"
            on_press: app.screen_manager.current = 'author'

        ScreenButton:
            text: "Exit"
            on_press: app.stop()